<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/sueface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--左边-->
        <LinearLayout
            android:id="@+id/lay_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:background="@mipmap/left_bg"
            android:orientation="vertical">

            <com.example.administrator.attendanceinputv3.widget.CustomViewTimeDate
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!--右边-->
        <RelativeLayout
            android:id="@+id/lay_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:background="@mipmap/img_tit">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0.1dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="滨海科技大厦一期装饰工程"
                android:textColor="@color/color_font_white"
                android:textSize="36sp" />
        </RelativeLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_toLeftOf="@+id/lay_right"-->
        <!--android:layout_toRightOf="@+id/lay_left">-->

        <!--相机头像-->
        <ImageView
            android:id="@+id/iv_employee_scan_photo"
            android:layout_width="198dp"
            android:layout_height="198dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/lay_centre_container"
            android:background="@mipmap/img_card_now"
            android:padding="40dp"
            android:src="@mipmap/img_user_b"
            android:visibility="visible" />


        <!--详细信息容器-->
        <FrameLayout
            android:id="@+id/lay_centre_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.example.administrator.attendanceinputv3.widget.CustomViewEmployeeDetails
                android:id="@+id/cv_employee_details_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.example.administrator.attendanceinputv3.widget.CustomViewEmployeeDetails
                android:id="@+id/cv_employee_details_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.example.administrator.attendanceinputv3.widget.CustomViewEmployeeDetails
                android:id="@+id/cv_employee_details_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />
        </FrameLayout>
        <!--相似度-->
        <LinearLayout
            android:id="@+id/lay_similarity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/lay_centre_container"
            android:background="@drawable/bg_similarity"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相似度"
                android:textColor="@color/color_font_white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_similarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相似度"
                android:textColor="@color/color_font_white"
                android:textSize="32dp" />
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>