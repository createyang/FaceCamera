<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <com.quansoon.facecamera.widget.CustomViewTimeDate
        android:id="@+id/cv_time_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="230dp"
        android:background="@drawable/select_login_btn"
        android:gravity="center"
        android:padding="30dp"
        android:text="设置完成"
        android:textColor="@color/color_font_white"
        android:textSize="32dp" />

    <com.quansoon.facecamera.widget.CustomViewEditText
        android:id="@+id/cus_edit_project_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        app:editBg="@drawable/select_login_edit_01"
        app:hintText="@string/please_enter_project_code" />

    <com.quansoon.facecamera.widget.CustomViewEditText
        android:id="@+id/cus_select_attendance_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cus_edit_project_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:canEnter="false"
        app:editBg="@drawable/select_login_edit_02"
        app:hintText="@string/please_select_attendance_equipment"
        app:showExpansionList="true" />


</RelativeLayout>